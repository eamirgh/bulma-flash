{
    "name": "eamirgh/bulma-flash",
    "description": "Easy flash notifications with bulma",
    "license": "MIT",
    "authors": [
        {
            "name": "Amir Ghaffari Heravi",
            "email": "a.g.h.94.72@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "illuminate/support": "~5.0"
    },
    "require-dev": {
        "mockery/mockery": "dev-master",
        "phpunit/phpunit": "^6.1"
    },
    "autoload": {
        "psr-0": {
            "Eamirgh\\Flash": "src/"
        },
        "files": [
            "src/Eamirgh/Flash/functions.php"
        ]
    },
    "minimum-stability": "stable",
    "extra": {
        "laravel": {
            "providers": [
                "Eamirgh\\Flash\\FlashServiceProvider"
            ],
            "aliases": {
                "Blash": "Eamirgh\\Flash\\Flash"
            }
        }
    }
}